{
  "name": "bitcoin-bot",
  "description": "Arbitragem com Bitcoin",
  "logo": "https://biscoint.io/images/biscoint-icon.svg",
  "repository": "https://github.com/itxtoledo/biscoint-bot",
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "free"
    }
  },
  "keywords": [
    "node",
    "bitcoin",
    "trading",
    "trader",
    "bot",
    "market",
    "maker",
    "algo",
    "crypto"
  ],
  "env": {
    "apiKey": {
      "description": "API Key Biscoint",
      "required": true
    },
    "apiSecret": {
      "description": "API Secret Biscoint",
      "required": true
    },
    "amount": {
      "description": "Valor em Bitcoin que será usado para fazer arbitragem. Deixe um valor menor do que o saldo na corretora, pois o robô pode ficar vendido ou comprado em alguma operação.",
      "required": true,
      "value": "0.001"
    },
    "initialSell": {
      "description": "Se o seu saldo estiver em Bitcoin, deixe o campo como true. Valor padrao: true",
      "required": true,
      "value": "true"
    },
    "intervalMs": {
      "description": "Intervalo em milissegundo.",
      "required": true,
      "value": "2500"
    },
    "test": {
      "description": "Ativar modo simulação",
      "required": true,
      "value": "false"
    },
    "differencelogger": {
      "description": "Logs do bot",
      "required": true,
      "value": "true"
    },
    "botchat": {
      "description": "Chat id do Telegram. Exemplo: 14872718712",
      "required": true
    },
    "token": {
      "description": "Token do Telegram. Exemplo: 1688943477:ACDhWI4A0-cy--L3IGgjjp2yuPq2TC7TJvg",
      "required": true
    },
    "botId": {
      "description": "bot_1 ou bot_2",
      "required": true,
      "value": "bot_1"
    },
    "host": {
      "description": "Servidor dos bots",
      "required": true,
      "valor": "localhost"
    },
    "porta": {
      "description": "Porta usada pelos bots",
      "required": true,
      "value": "80"
    },
    "multibot": {
      "description": "Usar mais de um bot",
      "required": true,
      "value": "true"
    }
  }
}